class Control

instance variables
opCount : int;
opMsg: seq of char;
flag :bool;

operations
public CallOp : () ==> ()
CallOp() == (
if flag then opMsg := "ding" else opMsg :="dong";
opCount := opCount +1;
flag := not flag;
);

public Control :()==>Control
Control()==(
opCount:=0;
opMsg := "";
flag:=true;
)

end Control
